//Stock Span
//METHOD 1
int* stockSpan(int *price, int size)  {
	int output[size];
	for(int i=0;i<size;i++){
          int stock = 1;
          for (int j = i-1; j >= 0; j--) {
            if (price[i]> price[j]) {
              stock++;
            }
		}
		output[i]=stock;
	}
	for(int i=0;i<size;i++){
		price[i]=output[i];
	}
	return price;
}

//METHOD 2
#include <stack>
int countBracketReversals(string input) {
  // Write your code here
  stack<char> s;
  int count = 0;
  if (input.size() % 2 != 0) {
    return -1;
  } 
    for (int i = 0; i < input.size(); i++) {
      if (input[i] == '{') {
        s.push(input[i]);
      } else if (!(s.empty()) && input[i] == '}' && s.top() == '{') {
        s.pop();
      } else if (s.empty() && input[i] == '}') {
        s.push(input[i]);
      } else if (!(s.empty()) && input[i] == '}' && s.top() == '}'){
		  s.push(input[i]);
	  }
    }
    while(!s.empty()){
      char a = s.top();
      s.pop();
      char b = s.top();
      s.pop();
      if (a == b) {
        count = count + 1;
      }
	  else{
		  count=count+2;
	  }
    }
	return count;
}
